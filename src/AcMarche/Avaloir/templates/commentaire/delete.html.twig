{% if is_granted('ROLE_TRAVAUX_AVALOIR') %}
    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
         aria-hidden="tcommentaire">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Confirmer la suppression</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="tcommentaire">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Etes vous sur de vouloir <strong>supprimer</strong> ?
                </div>
                <div class="modal-footer">
                    <form method="post" action="{{ path('commentaire_delete', {'id': commentaire.id}) }}">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
                        <button type="button" class="btn btn-secondary"
                                data-dismiss="modal">Annuler
                        </button>
                        <button type="submit"
                                class="btn btn-danger">Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endif %}
