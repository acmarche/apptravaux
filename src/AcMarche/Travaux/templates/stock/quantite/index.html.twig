{% extends 'stock/layout.html.twig' %}

{% block body %}
    <h3>{{ produit.nom }}</h3>

    <div class="card bg-light">
        <div class="card-header">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary"><i
                        class="far fa-save"></i> {{ button_label|default('Save')|trans }}</button>
            {{ form_end(form) }}
        </div>
    </div>

    <br/>
    <a href="{{ path('stock_produit_show',{'id': produit.id}) }}"><i class="fas fa-arrow-left"></i>
        Annuler</a>

    {{ include('stock/produit/_delete_form.html.twig') }}
{% endblock %}
