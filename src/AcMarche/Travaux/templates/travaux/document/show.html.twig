{% extends '@AcMarcheTravaux/layout.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h3>Détail du document</h3>
    </div>

    {% include 'travaux/document/actions.html.twig' %}

    {% if 'image' in entity.mime %}
        <img src="{{ entity | apptravaux_download | imagine_filter('actravaux_zoom') }}"
             alt="img"/>
        <br/><br/>
    {% endif %}

    <i class="fas fa-download"></i>
    <a href="{{ absolute_url(entity | apptravaux_download ) }}">Télécharger</a>

    {% include 'travaux/document/delete.html.twig' %}
{% endblock %}
