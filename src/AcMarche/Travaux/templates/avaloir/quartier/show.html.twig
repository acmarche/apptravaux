{% extends 'avaloir/layout_avaloir.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h3>Détail du quartier <strong>{{ entity }}</strong></h3>
    </div>

    {% include 'avaloir/quartier/actions.html.twig' with {'entity': entity } %}


    <h4>Liste des rues</h4>
    <table class='table table-bordered table-hover'>
        <thead>
        <tr>
            <th>Rue</th>
            <th>Avaloirs</th>
            <th>Dernière date de nettoyage</th>
        </tr>
        </thead>
        <tbody>
        {% for village,rues in listrues %}
            {% for rue in rues %}
                <tr>
                    <td>
                        <a href="{{ path('rue_show', { 'id': rue.id }) }}">
                            {{ rue }}
                        </a>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
                {% for avaloir in rue.avaloirs %}
                    <tr>
                        <td></td>
                        <td>
                            <a href="{{ path('avaloir_show', { 'id': avaloir.id }) }}">
                                Avaloir {{ avaloir.id }} au {{ avaloir }} </a>
                        </td>
                        <td>
                            {% if avaloir.dates | length > 0 %}
                                {% set jour = avaloir.dates | first %}
                                {{ jour }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% endfor %}
        {% else %}
            <tr>
                <td>Aucne</td>
                <td></td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include 'avaloir/quartier/delete.html.twig' %}
{% endblock %}