{% extends 'avaloir/layout_avaloir.html.twig' %}

{% block body -%}
    <div class="page-header">
        <h3>DÃ©tail de l'avaloir <strong>{{ avaloir }}</strong></h3>
    </div>

    {% include 'avaloir/avaloir/actions.html.twig' %}

    {% if avaloir.dateRappel %}
        <br />
        <p>
        <strong>Date de rappel : {{ avaloir.dateRappel | date('d-m-Y') }}</strong>
        </p>
        <br />
    {% endif %}
 <br />
    <h4>Liste des dates de nettoyages</h4>

    <ul class='list-group'>
        {% for date in avaloir.dates %}
            {% set datenettoyage = date.jour %}
            <li class='list-group-item'>
                <a title='' href='{{ path('datenettoyage_show', { 'id': date.id }) }}'>
                    {{ datenettoyage | date('d-m-Y') }}
                </a>
            </li>
        {% else %}
            <li class='list-group-item'>Aucune</li>
        {% endfor %}
    </ul>
    <br />

    <p>{{ avaloir.descriptif | nl2br }}</p>
    <p class="text-muted">
        {{ 'Created' | trans }} {{ avaloir.created|date('d-m-Y H:i:s') }}
        . {{ 'Updated' | trans }} {{ avaloir.updated|date('d-m-Y H:i:s') }}
    </p>

    {% include 'avaloir/avaloir/delete.html.twig'  %}

{% endblock %}
