{% if suivis | length > 0 %}

    <h3>Suivis</h3>
    {{ form_start(form, { 'attr': {'class': 'well'} }) }}
    {{ form_errors(form, { 'attr': {'class': 'well'} }) }}

    <button type="submit" name="delete" class="btn btn-danger btn-sm float-right d-print-none">
        <i class="fas fa-trash"></i> Supprimer le(s) suivi(s)
    </button>
    <br/>
    <div class="clear-fix"></div>
    <br/>
    {% for suivi in suivis %}
        <div class="card bg-light mb-3 d-print-none">

            <div class="card-body">
                <p class="card-text">
                    {{ suivi.descriptif }}
                </p>
            </div>

            <div class="card-footer text-muted">
                {{ 'Created' | trans }} {{ suivi.created|date('d-m-Y H:i:s') }} par {{ suivi.useradd }}
                . {{ 'Updated' | trans }} {{ suivi.updated|date('d-m-Y H:i:s') }}
                {% include 'travaux/intervention/actions_suvi.html.twig' %}
            </div>
        </div>
    {% endfor %}
    {{ form_end(form) }}
{% endif %}