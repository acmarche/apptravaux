<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">
            {{ intervention }}
            {% if intervention.etat == 'En attente' %}
                <span class=" pull-right glyphicon glyphicon-hourglass" title="{{ intervention.etat }}"></span>
            {% endif %}
        </h3>
    </div>
    <div class="panel-body">
        {#% include 'intervention:validation.html.twig' with {'transitions': transitions,'intervention': intervention } %#}
        <div class="col-md-6">
            <table class='table table-bordered table-hover'>
                <tr>
                    <th>
                        Numéro:
                    </th>
                    <td>
                        {{ intervention.id }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Priorité:
                    </th>
                    <td>
                        {{ intervention.priorite }}
                    </td>
                </tr>
                <tr>
                    <th>
                        <span class="glyphicon glyphicon-calendar"></span> Demandé le:
                    </th>
                    <td>
                        {{ intervention.created | date('d-m-Y') }}
                    </td>
                </tr>
                <tr>
                    <th>
                        <span class="glyphicon glyphicon-calendar"></span> Reporté au:
                    </th>
                    <td>
                        {% if intervention.dateExecution %}
                            {{ intervention.dateExecution | date('d-m-Y') }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>
                        <span class="glyphicon glyphicon-calendar"></span> Validé le:
                    </th>
                    <td>
                        {% if intervention.datevalidation %}
                            {{ intervention.datevalidation | date('d-m-Y') }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>
                        Type:
                    </th>
                    <td>
                        {{ intervention.domaine }}
                    </td>
                </tr>

                <tr>
                    <th>
                        Service:
                    </th>
                    <td>
                        {{ intervention.service }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Bâtiment:
                    </th>
                    <td>
                        {{ intervention.batiment }}
                    </td>
                </tr>
                <tr>
                    <th>
                        Catégorie
                    </th>
                    <td>
                        {{ intervention.categorie }}
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-6">
            <table class='table table-bordered table-hover'>
                <tr>
                    <th>
                        Etat:
                    </th>
                    <td>
                        {{ intervention.etat }}
                    </td>
                </tr>
                <tr>
                    <th>
                        <span class="glyphicon glyphicon-calendar"></span> Date rappel:
                    </th>
                    <td>
                        {% if intervention.daterappel %}
                            {{ intervention.daterappel | date('d-m-Y') }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>
                        <span class="glyphicon glyphicon-user"></span>
                        <strong>Affectation:</strong>
                    </th>
                    <td>
                        {{ intervention.affectation | nl2br }}
                    </td>
                </tr>
                <tr>
                    <th>
                        <strong>Affecté à un privé</strong>
                    </th>
                    <td>
                        {% if intervention.affectePrive %}
                            Oui
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>
                        Transmis:
                    </th>
                    <td>
                        {% if intervention.transmis %}
                            <span class="glyphicon glyphicon-ok"></span>

                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>
                        <span class="glyphicon glyphicon-calendar"></span> Soumis le
                    </th>
                    <td>
                        {% if intervention.soumisle %}
                            {{ intervention.soumisle | date('d-m-Y') }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>
                        <span class="glyphicon glyphicon-euro"></span> Coût en main
                        d'oeuvre:
                    </th>
                    <td>
                        {% if intervention.coutmain %}
                            {{ intervention.coutmain | number_format(2, ',', ' ') }} €
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>
                        <span class="glyphicon glyphicon-euro"></span><strong> Coût en
                            matériel:</strong>
                    </th>
                    <td>
                        {% if intervention.coutmateriel %}
                            {{ intervention.coutmateriel | number_format(2, ',', ' ') }} €
                        {% endif %}
                    </td>
                </tr>
                {% set total = intervention.coutmain + intervention.coutmateriel %}
                {% if total > 0 %}
                    <tr>
                        <th>
                            <span class="text-warning">Soit un total de</span>
                        </th>
                        <td>
                            <span class="text-warning">{{ total | number_format(2, ',', ' ') }} €</span>
                        </td>
                    </tr>
                {% endif %}
                <tr>
                    <th>
                        <span class="glyphicon glyphicon-calendar"></span> Date de solution:
                    </th>
                    <td>
                        {% if intervention.datesolution %}
                            {{ intervention.datesolution | date('d-m-Y') }}
                        {% endif %}
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-md-12">
            <br/>
            <p>{{ intervention.descriptif | nl2br }}</p>

            {% if intervention.solution %}
                <h4 class="text-success">Solution apportée:</h4>
                {{ intervention.solution | nl2br }}
            {% endif %}
            <br/>
        </div>
    </div>
    {% if not pdf %}
        <div class="panel-footer">
            <span class="text-muted">
                {{ 'Created' | trans }} {{ intervention.created|date('d-m-Y H:i:s') }} par {{ intervention.useradd }}
                . {{ 'Updated' | trans }} {{ intervention.updated|date('d-m-Y H:i:s') }}
            </span>
            {% if intervention.archive %}
                <span class="pull-right glyphicon glyphicon-compressed" title="Archive">Archive</span>
            {% endif %}
        </div>
    {% endif %}
</div>