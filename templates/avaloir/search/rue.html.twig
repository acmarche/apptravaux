<div class="hidden-print">

    {{ form_start(search_form, { 'attr': {'class': 'form-inline'}}) }}
    {{ form_errors(search_form) }}

    <div class="form-group">

        <div class="input-group">
            <div class="input-group-addon"><span class="glyphicon glyphicon-filter"></span></div>
                {{ form_widget(search_form.village) }}
        </div>
        
        <div class="input-group">
            <div class="input-group-addon"><span class="glyphicon glyphicon-filter"></span></div>
                {{ form_widget(search_form.quartier) }}
        </div>

        <div class="input-group">
            <div class="input-group-addon"><span class="glyphicon glyphicon-filter"></span></div>
                {{ form_widget(search_form.nom) }}
        </div>            

        <div class="input-group">
            {{ form_row(search_form.submit) }}
        </div>

        <div class="input-group">
            {{ form_row(search_form.raz) }}
        </div>        

    </div>    
    {{ form_end(search_form) }}
</div>
<br />
