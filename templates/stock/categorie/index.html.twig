{% extends 'stock/layout.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
    <h3>Liste des catégories</h3>

    <a class="btn btn-primary" href="{{ path('stock_categorie_new') }}">
        <i class="fas fa-plus"></i> Nouvelle catégorie</a>
    <br/> <br/>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Nom</th>
        </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td><a href="{{ path('stock_categorie_show', {'id': categorie.id}) }}">{{ categorie.nom }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td>no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
